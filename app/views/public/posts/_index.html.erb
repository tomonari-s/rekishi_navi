<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= link_to(post.user) do %>
          <% end %>
        </td>
        <td><%= link_to post.title,book, class: "post_#{post.id}" %></td>
        <td><%= post.text %></td>
      </tr>
    <% end %>
  </tbody>
</table>